pipeline{
    agent any
    stages{
        stage("checkout the code"){
         steps{
            git credentialsId: 'githubtoken', url: 'https://github.com/akshu20791/addressbook-cicd-project/'
            echo "git checkout done"
         }
        }
        stage("compile the code"){
            steps{
                sh "mvn compile"
            }
        }
        stage("package the code"){
            steps{
                echo "we are packaging the project"
                sh "mvn package"
            }
        }
        stage("run the test cases"){
            steps{
                echo "run the test cases"
                sh "mvn test"
            }
        }
        stage("qa via pmd plugin"){
            steps{
                echo "performing qa"
                sh "mvn pmd:pmd"
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [pmdParser()]
            }
        }
        stage("deploy the project"){
            steps{
                echo "deploying the project"
                sh "sudo cp /var/lib/jenkins/workspace/myfirstpipeline/target/addressbook.war /home/ubuntu/apache-tomcat-9.0.112/webapps"
               
            }
        }
    }
}
